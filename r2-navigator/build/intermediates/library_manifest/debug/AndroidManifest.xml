<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.readium.r2.navigator" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        tools:replace="android:allowBackup" >
        <activity
            android:name="org.readium.r2.navigator.epub.R2EpubActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.readium.r2.navigator.cbz.R2CbzActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.readium.r2.navigator.audiobook.R2AudiobookActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.readium.r2.navigator.divina.R2DiViNaActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>