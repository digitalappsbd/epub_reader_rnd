<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/id_fragment_fbreader_catalog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none" />

  <LinearLayout
    android:id="@+id/id_fragment_fbreader_catalog_empty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="120dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:ignore="UseCompoundDrawables">

    <ImageView
      android:id="@+id/id_fragment_fbreader_catalog_empty_img"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_gravity="center"
      android:src="@drawable/ic_fbreader_catalog_empty_day"
      tools:ignore="ContentDescription" />

    <TextView
      android:id="@+id/id_fragment_fbreader_catalog_empty_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/fbreader_bookmark_empty"
      android:textColor="#cccccc"
      android:textSize="14sp" />
  </LinearLayout>
</RelativeLayout>