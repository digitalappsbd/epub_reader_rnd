<?xml version="1.0" encoding="utf-8"?>
<org.geometerplus.android.fbreader.SimplePopupWindow xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/search_panel"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentBottom="true"
  android:layout_centerHorizontal="true"
  android:layout_marginTop="25dp"
  android:layout_marginBottom="25dp"
  android:background="@drawable/panel"
  android:focusable="false"
  android:paddingStart="15dp"
  android:paddingEnd="15dp"
  android:visibility="gone">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <ImageView
      android:id="@+id/search_panel_previous"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:src="@drawable/popup_back"
      tools:ignore="ContentDescription" />
    <ImageView
      android:id="@+id/search_panel_close"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:src="@drawable/popup_close_large"
      tools:ignore="ContentDescription" />
    <ImageView
      android:id="@+id/search_panel_next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:src="@drawable/popup_forward"
      tools:ignore="ContentDescription" />
  </LinearLayout>
</org.geometerplus.android.fbreader.SimplePopupWindow>
